[core]
	editor = nvim
	pager = delta
	autocrlf = input

[init]
	defaultBranch = main

[pull]
	rebase = true

[commit]
	gpgsign = true

[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false

[delta]
    navigate = true
    light = false

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
